# EODHD API Configuration
EODHD_API_KEY=your_api_key_here
EODHD_BASE_URL=https://eodhd.com/api

# Database Configuration
# SQLite (default)
DATABASE_URL=sqlite:///data/financial_data.db
# PostgreSQL (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/financial_data

# Scheduler Configuration
SCHEDULER_ENABLED=true
DOWNLOAD_INTERVAL_HOURS=24

# Rate Limiting
API_RATE_LIMIT=100
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1.0

# OpenAI Configuration (optional - for AI summaries)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Logging
LOG_LEVEL=INFO

# Dashboard Authentication (optional but recommended)
# Set a password to protect the dashboard
DASHBOARD_PASSWORD=
# Set to 'true' to require authentication
DASHBOARD_AUTH_ENABLED=false
